{
  "name": "esper-remote-control",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.reubenmorais.esperremote",
    "productName": "Esper Remote Control",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "zip"
      ]
    }
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^2.0.1",
    "electron-builder": "^20.15.1"
  },
  "dependencies": {
    "remote-browser": "file:../remote-browser"
  }
}
